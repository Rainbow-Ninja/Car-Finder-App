<p id="notice"><%= notice %></p>
<div class = "row">
  <div class = "col-md-8">
    <div class = "row">
      <%= @car.pictures.each do |picture|%>
        <div class="col-md-6">
          <%= image_tag picture, class: "d-block w-100"%>
        </div>
      <%end%>
    </div>
  </div>
  <div class = "col-md-4">
    <p>
      <strong>Make:</strong>
      <%= @car.make %>
    </p>

    <p>
      <strong>Model:</strong>
      <%= @car.model %>
    </p>

    <p>
      <strong>Year:</strong>
      <%= @car.year %>
    </p>

    <p>
      <strong>Km:</strong>
      <%= @car.km %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @car.price %>
    </p>

    <p>
      <strong>Color:</strong>
      <%= @car.color %>
    </p>

    <p>
      <strong>Rego:</strong>
      <%= @car.rego %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @car.description %>
    </p>

    <p>
      <strong>Fuel type:</strong>
      <%= @car.fuel_type %>
    </p>

    <p>
      <strong>Transmission type:</strong>
      <%= @car.transmission_type %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @car.location %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_car_path(@car) %> |
