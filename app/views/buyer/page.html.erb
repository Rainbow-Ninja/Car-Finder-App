<form action="/payment" method="POST">
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="pk_test_5YqT6PjYM3NDLOmJG0N7pnbH00OC2JKQcG"
    data-amount="<%= @car.price * 100 %>"
    data-name="A Happy Little Index"
    data-description="Widget"
    data-image="/assets/nice.jpg"
    data-locale="auto"
    data-currency="aud"
    data-email="<%= current_user.email%>">
  </script>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%# pass car info so we can put it in the join table %>
  <%= hidden_field_tag :car_id, @car.id %>
  <%= hidden_field_tag :seller_id, @car.seller_id %>
</form>